generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?    @unique
  emailVerified DateTime?  @map("email_verified")
  image         String?
  password      String?
  accounts      Account[]
  expenses      Expense[]  @relation("UserExpenses")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Expense {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  amount      Float
  description String?
  userId      String   @db.ObjectId
  user        User     @relation("UserExpenses", fields: [userId], references: [id])
  categoryId  String   @db.ObjectId
  category    Category @relation("CategoryExpenses", fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId], map: "userId_idx")
  @@index([categoryId], map: "categoryId_idx")
}

model Category {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  expenses  Expense[] @relation("CategoryExpenses")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
